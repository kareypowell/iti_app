@font-face {
  font-family: 'fontello';
  src: url('<%= font_path "fontello.eot?61640691" %>');
  src: url('<%= font_path "fontello.eot?61640691#iefix" %>') format('embedded-opentype'),
       url('<%= font_path "fontello.woff?61640691" %>') format('woff'),
       url('<%= font_path "fontello.ttf?61640691" %>') format('truetype'),
       url('<%= font_path "fontello.svg?61640691#fontello" %>') format('svg');
  font-weight: normal;
  font-style: normal;
}

.fraction-slider{
	position:relative;
	width:100%; height:100%;
	overflow:visible;
}

.fraction-slider .slide{
	display:none; width:100%; height:100%;
	position:absolute;
	z-index:5000;
}

.fraction-slider .active-slide{
	z-index:4999;
}

.fraction-slider .fs_obj{
	display:block; display:none;
	position:absolute;
	top:0px; left:100%;
	z-index:7000;
}

.fraction-slider .fs_fixed_obj{
	z-index:6000;
	left:0;
}

.fraction-slider .fs_obj *{
	display:inline-block;
	position:relative;
	top:0px; left:0px;
}

.fs_loader{
	width:100%; height:400px;
	background:url(../images/fs.spinner.gif) center center no-repeat transparent;
}

/** CONTROLS **/

.fraction-slider .prev,
.fraction-slider .next{
	position:absolute;
	width:100px; 
	height:100px;
	z-index:9999;
	top:43%;
	color:#fff;
	font-family:'fontello';
	font-size:6em;
}

.fraction-slider .prev{
	left:0px; }
.fraction-slider .prev:before {content: '\e8b2';}
.fraction-slider .prev:hover{

}
.fraction-slider .next:before {	content: '\e8b3';}
.fraction-slider .next{
	right:0px;
	text-align: center;
}
.fraction-slider .next:hover{
}

.fraction-slider:hover .prev,
.fraction-slider:hover .next{
	display:block;
}

/** PAGER **/

.fs-pager-wrapper{
	position:absolute;
	left:50%; top:80%;
	z-index:5000;	
	-webkit-transform: 	translate(-50%, -50%);
	-moz-transform: 	translate(-50%, -50%);
	-o-transform: 		translate(-50%, -50%);
	-ms-transform: 		translate(-50%, -50%);
	transform: 			translate(-50%, -50%);
}

.fs-pager-wrapper a{
	display:inline-block;
	width:14px; height:14px;
	margin:0 5px 0 0;
	background:url(../images/fs.pager.png) 0px -14px no-repeat transparent;
}
.fs-pager-wrapper .active{
	background:url(../images/fs.pager.png) 0px 0px no-repeat transparent;
}